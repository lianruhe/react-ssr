{
  "name": "react-ssr",
  "description": "React server side rendering",
  "version": "0.0.1",
  "scripts": {
    "clean": "node ./cli/clean.js",
    "compile": "cross-env NODE_ENV=production DEBUG=server* node ./cli/compile.js",
    "dev": "cross-env NODE_ENV=development DEBUG=server* node ./cli/compile.js && node dist/server.bundle.js",
    "watch": "cross-env NODE_ENV=development DEBUG=server* nodemon ./cli/watch.js",
    "start": "npm run clean && npm run compile && node dist/server.bundle.js"
  },
  "author": "shanks <lianruhe2013@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lianruhe/koa-ssr.git"
  },
  "dependencies": {
    "koa": "^2.2.0",
    "koa-body": "^2.1.0",
    "koa-compose": "^4.0.0",
    "koa-logger": "^3.0.0",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.2",
    "mongoose": "^4.11.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.14.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-import": "^1.6.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.24.1",
    "cross-env": "^5.0.1",
    "eslint": "^4.12.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "nodemon": "^1.11.0",
    "style-loader": "^0.19.0",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^18.0.0",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0",
    "yargs": "^10.0.3"
  }
}
